<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/actionbar_style</item>
    </style>
    
    <style name="actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/red</item>
        <item name="android:titleTextStyle">@style/actionbar_title_style</item>
    </style>
    
    <style name="actionbar_title_style" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx SALAD THIEVES WORK xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx -->
    <!-- screen root style -->
    <style name="screen_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/dimen_small2</item>
        <item name="android:paddingRight">@dimen/dimen_small2</item>
        <item name="android:paddingBottom">@dimen/dimen_small2</item>
        <item name="android:background">@drawable/screen_background</item>
    </style>

    <style name="screen_logo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_small2</item>
        <item name="android:src">@drawable/screen_logo</item>
    </style>

    <style name="screen_input_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">@dimen/dimen_small2</item>
        <item name="android:layout_marginBottom">@dimen/dimen_small1</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="edit_text.password">
        <item name="android:inputType">textPassword</item>
        <item name="android:layout_marginBottom">100dp</item>
    </style>
    
    <style name="social_network_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/dimen_tiny2</item>
    </style>
    
    <style name="social_network_button.facebook">
        <item name="android:background">@drawable/button_background_facebook</item>
    </style>
    
    <style name="social_network_button.twitter">
        <item name="android:background">@drawable/button_background_twitter</item>
    </style>
    
    <style name="signup_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_red</item>
        <item name="android:layout_marginTop">@dimen/dimen_small3</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_margin">@dimen/dimen_small1</item>
    </style>

    <!-- green button style -->
    <style name="button.green">
        <item name="android:background">@drawable/button_background_green</item>
    </style>

    <!-- red button style -->
    <style name="button.red">
        <item name="android:background">@drawable/button_background_red</item>
    </style>
    
    <style name="trivia_screen_label">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="trivia_screen_label.title">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <style name="trivia_screen_label.subtitle">
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:layout_marginBottom">@dimen/dimen_small3</item>
    </style>
    
    <style name="trivia_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_small3</item>
        <item name="android:background">@drawable/button_background_white</item>
        <item name="android:textColor">@color/red</item>
    </style>
    
    <!-- settings screen -->
    <style name="settings_row_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_background_white</item>
        <item name="android:paddingBottom">@dimen/dimen_small2</item>
        <item name="android:paddingTop">@dimen/dimen_small2</item>
        <item name="android:paddingRight">@dimen/dimen_small1</item>
        <item name="android:paddingLeft">@dimen/dimen_small1</item>
    </style>
    
    <!-- settings switch style -->
    <style name="settings_row_switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
    </style>
    
    <!-- tab item container style -->
    <style name="tab_item_container">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/dimen_tiny4</item>
    </style>
    
    <!-- tab item image style -->
    <style name="tab_item_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    
    <!-- tab item label -->
    <style name="tab_item_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!-- tab item active label -->
    <style name="tab_item_label.active">
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- tab item inactive label -->
    <style name="tab_item_label.inactive">
        <item name="android:textColor">@color/red</item>
    </style>
    
</resources>
